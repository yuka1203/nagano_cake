<div class="container text-center mx-auto">
  <div class="row mt-3">
  
    <div class="col-2 offset-md-2 mb-5">
    <div class="text-dark" style="background-color:#DDDDDD">配送先編集</div>
    </div>
  </div>
  
  <div class="row">
      <div class="col-md-7 offset-md-2">
          <%= form_with model: @address, url: address_path, method: :patch do |f| %>
          <table>
              <tr>
                  <th>郵便番号</th>
                  <td><%= f.text_field :postal_code %></td>
              </tr>
              <tr>
                  <th>住所</th>
                  <td><%= f.text_field :address %></td>
              </tr>
              <tr>
                  <th>宛名</th>
                  <td><%= f.text_field :name %></td>
                  <td> <%= f.submit "変更内容を保存", class: "btn btn-success" %></td>
              </tr>
          </table>
          <% end %>
       </div>
  </div>
 </div>