<div class="container text-center mx-auto">
  <div class="row mt-3">
  
    <div class="col-2 offset-md-2 mb-5">
    <div class="text-dark" style="background-color:#DDDDDD">ログイン</div>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-md-4 offset-md-3" style="background-color:#DDDDDD">
      会員の方はこちらからログイン
    </div>
  </div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field row mb-3">
    <%= f.label "メールアドレス", class:"col-md-2 offset-3" %>
    <%= f.email_field :email, class: "col-md-4", placeholder:"sample@example.com", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field row mb-3">
    <%= f.label "パスワード", class:"col-md-2 offset-3" %>
    <%= f.password_field :password, class: "col-md-4", autocomplete: "current-password" %>
  </div>

  <div class="actions mb-3">
    <%= f.submit "ログイン", class: "col-md-2 btn btn-primary" %>
  </div>
<% end %>

<div class="row">
    <div class="col-md-3 offset-md-3 mb-3" style="background-color:#DDDDDD">
      会員の登録がお済みでない方
    </div>
</div>

<%= link_to 'こちら', new_customer_registration_path %>から新規登録を行ってください。


