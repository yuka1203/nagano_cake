<div class="container text-center mx-auto">
  <div class="row mt-3">
  
    <div class="col-5 offset-md-1 mb-5">
        <h1><strong>商品一覧</strong>（全<%= @count %>件）</h1>
    </div>
  </div>
  
  <div class="row">
      <% @items.each do |item| %>
      <div class="col-md-3 mb-3">
          <%=link_to item_path(item.id) do %>
           <%= image_tag item.get_image(200,200) %>
          <% end %><br>
          <%= item.name %><br>
          ¥<%= item.price %>
      </div>
      <% end %>
  </div>
  <div class="row">
      <div class="col-md-4 offset-4">
          <%= paginate @items %>
      </div>
  </div>
    
</div>