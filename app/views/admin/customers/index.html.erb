<div class="container mx-auto">
    <div class="row">
        <div class="col-3 offset-md-1 text-center mb-3">
        　<div class="text-dark" style="background-color:#DDDDDD">会員一覧</div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <table class="table">
                <thead class="thead" style="background-color:#DDDDDD">
                    <tr>
                        <th>会員ID</th>
                        <th>氏名</th>
                        <th>メールアドレス</th>
                        <th>ステータス</th>
                    </tr>
                </thead>
                
                <tbody>
                    <% @customers.each do |customer| %>
                    <tr>
                        <td><%= customer.id %></td>
                        <td>
                            <%= link_to admin_customer_path(customer.id) do %>
                            <p class="text-dark"><%= customer.last_name %><%=customer.first_name %></p>
                            <% end %>
                        </td>
                        <td><%= customer.email %></td>
                        <td><% if customer.is_deleted == true %>
                            <p class="text-secondary"><%= '退会' %></p>
                            <% else %>
                            <p class="text-success"><%= '有効' %></p>
                            <% end %>
                        </td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
            
            <div class="col-4 offset-4 text-center">
            <%= paginate @customers %>
            </div>
        </div>
    </div>
</div>



