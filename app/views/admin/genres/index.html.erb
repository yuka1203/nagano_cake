<div class="container mx-auto">
    <div class="row">
        <div class="col-3 offset-md-1 text-center mb-3">
        　<div class="text-dark" style="background-color:#DDDDDD">ジャンル一覧・追加</div>
        </div>
    </div>
    <div class="row">
     <div class="col-2">
      <%= form_with model: @genre, url: "/admin/genres" do |f| %>
      <th>ジャンル名</th>
     </div>
     <div class="col-3">
      <td><%= f.text_field :name, placeholder:"ジャンル名", size: "20" %></td>
     </div>
     <div class-"col-2">
      <%= f.submit '新規登録', class: "btn btn-success" %>
      <% end %>
     </div>
   </div>
   
   <div class="row">
    <div class="col-5">
     <table class="table">
      <thead class="thead" style="background-color:#DDDDDD">
       <tr>
        <th>ジャンル</th>
        <th></th>
       </tr>
      </thead>
    
      <tbody>
       <% @genres.each do |genre| %>
       <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
       </tr>
       <% end %>
      </tbody>
     </table>
    </div>
   </div>
 </div>