<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container">
                <a class="navbar-brand p-3" href="/"><span>ながのCAKE</span></a>
                
                 <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                     <span class="navbar-toggler-icon"></span>
                 </button>
                 <div class="collapse navbar-collapse" id="navbarNavDropdown">
                
                 <ul class="navbar-nav ml-auto">
                <% if admin_signed_in? %>
                
                <% if request.fullpath.include? "/admin" %>
                <!--//admin側のheaderを返す-->
                <li class="nav-item">
                    <%= link_to "商品一覧", admin_items_path, class:'mr-3 btn btn-outline-secondary nav-link text-dark' %>
                </li>
                <li class="nav-item">
                    <%= link_to "会員一覧", admin_customers_path, class:'mr-3 btn btn-outline-secondary nav-link text-dark' %>
                </li>
                <li class="nav-item">
                    <%= link_to "注文履歴一覧", admin_root_path, class:'mr-3 btn btn-outline-secondary nav-link text-dark' %>
                </li>
                <li class="nav-item">
                    <%= link_to "ジャンル一覧", admin_genres_path, class:'mr-3 btn btn-outline-secondary nav-link text-dark' %>
                </li>
                <li class="nav-item">
                    <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class:'mr-3 btn btn-outline-secondary nav-link text-dark' %>
                </li>
                <% else %>
                 <!--// user側のheaderを返す-->
                <%= render 'layouts/customer_header' %>
                <% end %>
                <% elsif customer_signed_in? %>
                <%= render 'layouts/customer_header' %>
                <% else %>
                <li class="nav-item">
                    <%= link_to "About", about_path, class:'mr-3 btn btn-outline-secondary nav-link text-dark' %>
                </li>
                <li class="nav-item">
                    <%= link_to "商品一覧", items_path, class:'mr-3 btn btn-outline-secondary nav-link text-dark' %>
                </li>
                <li class="nav-item">
                    <%= link_to "新規登録", new_customer_registration_path, class:'mr-3 btn btn-outline-secondary nav-link text-dark' %>
                </li>
                <li class="nav-item">
                    <%= link_to "ログイン", new_customer_session_path, class:'mr-3 btn btn-outline-secondary nav-link text-dark' %>
                </li>
                <% end %>
                 </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <main class="md-auto">
        <%= yield %>
    </main>
  </body>
</html>
