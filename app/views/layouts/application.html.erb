<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1, maximum-scale=">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    
    <%= link_to "LOGO", root_path %>    
    
    
     <% if admin_signed_in? %>
     
      <% if request.fullpath.include? "/admin" %>
        <!--//admin側のheaderを返す-->
        <%# if admin_signed_in? %>
         <li>
             <%= link_to "商品一覧", admin_items_path %>
         </li>
         <li>
             <%= link_to "会員一覧", admin_customers_path %>
         </li>
         <li>
             <%= link_to "注文履歴一覧", admin_root_path %>
         </li>
         <li>
             <%= link_to "ジャンル一覧", admin_genres_path %>
         </li>
         <li>
             <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
         </li>
       <% else %>
        <!--// user側のheaderを返す-->
         <%= render 'layouts/customer_header' %>
       <% end %>
    <% elsif customer_signed_in? %>
        <%= render 'layouts/customer_header' %>
    <% else %>
        <li>
             <%= link_to "About", about_path %>
         </li>
         <li>
             <%= link_to "商品一覧", items_path %>
         </li>
         <li>
          <%= link_to "新規登録", new_customer_registration_path %>
         </li>
         <li>
          <%= link_to "ログイン", new_customer_session_path %>
         </li>
    <% end %>

 
    </header>
    <%= yield %>
  </body>
</html>
